<footer id = "footer-wrap" class = "footer-section section footer-wrap text-center">
  {% if page.footer_signup %}
  <div class = "footer-subscribe">
    <div class = "{{ container }}">
      {{ page.footer_signup }}
    </div>
  </div>
  {% elseif snippet.footer_signup %}
  <div class = "footer-subscribe">
    <div class = "{{ container }}">
      {{ snippet.footer_signup }}
    </div>
  </div>
  {% endif %}
  
  {% if page.footer_copyright or snippet.footer_copyright or 
    page.footer_signup or snippet.footer_signup %}
  <div class = "footer-copyright-social">
    <div class = "{{ container }}">
      <div class = "row">
        {% if page.footer_copyright %}
        <div class = "col-sm-8 footer-copyright text-left">
          {{ page.footer_copyright }}
        </div>
        {% elseif snippet.footer_copyright %}
        <div class = "col-sm-8 footer-copyright text-left">
          {{ snippet.footer_copyright }}
        </div>
        {% endif %}      

        {% if page.footer_social %}
        <div class = "col-sm-4 footer-social text-right">
          {{ page.footer_social }}
        </div>
        {% elseif snippet.footer_social  %}
        <div class = "col-sm-4 footer-social text-right">
          {{ snippet.footer_social }}
        </div>
        {% endif %}      
      </div>
    </div>
  </div>
  {% endif %}
</footer>
